<odoo>
    <data>
      <record id="email_template_onboarding" model="mail.template">
        <field name="name">Onboarding: Email</field>
        <field name="model_id" ref="wc_onboarding.model_onboarding_onboarding"></field>
        <!-- <field name="email_from">${object.user_id.email_formatted |safe}</field>                                 -->
        <!-- <field name="partner_to">${object.targeted_partner |safe}</field> -->
        <field name="email_to">${object.email |safe}</field>
        <!-- <field name="email_cc">${object.manager.work_email |safe}</field>                              -->
        <field name="subject"> Onboarding Email for the ${object.job_id.name} Position</field>
        <field name="body_html" type="html">
          <div style="margin: 0px; padding: 0px;">Dear ${object.employee_id.name},
            <p>
                Hello ${object.common_name},<br/><br/>
                You can find the attachments below.<br/>
            </p>

            Thank you,
            % if object.user_id.signature:
                <br />
                ${object.user_id.signature | safe}
            % endif
          </div>
        </field>
      </record>


    </data>
</odoo>
