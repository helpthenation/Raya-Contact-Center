<odoo>
  <data>
  
   <record id="hr_recruitment_stage_form" model="ir.ui.view">
            <field name="name">hr.recruitment.stage.form</field>
            <field name="model">hr.recruitment.stage</field>
            <field name="inherit_id" ref="hr_recruitment.hr_recruitment_stage_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//form/sheet/group/group[2]" position="inside">
                  <field name="is_initial" attrs="{'invisible':[('job_category', '!=', 'talent')]}"/>
                  <field name="is_final" attrs="{'invisible':[('job_category', '!=', 'talent')]}"/>
                  </xpath>
            </field>
    </record>
    <record id="hr_applicant_view_form" model="ir.ui.view">
            <field name="name">hr.applicant.form</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
             
                  <xpath expr="//form/sheet/group/group[4]" position="inside">
                  <field name="applicant_quartile_type" force_save="1" readonly="1" />
                  <!-- <field name="applicant_kpi" readonly="1" attrs="{'invisible':[('emp_id', '=', 'False')]}"/> -->
                  </xpath>
            </field>
    </record>
    <record id="view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//form/sheet/group/group[2]" position="inside">
                        <field name="evaluation_type" placeholder='Evaluation Type'/>
                        <field name="kpi_average" readonly="1" />
                        <field name="quartile_average" readonly="1" />
                  </xpath>  
                  <xpath expr="//page[@name='hr_settings']" position="after">
                        <page name="kpi_data" string="KPI Employee" groups="hr.group_hr_user">
                                          <field name="employee_kpi" string="Quartile">
                                           <tree string="Emploee KPI" editable="bottom">
         <field name="eva_type" invisible="1"/>
             <field name="period_month" string='Period' attrs="{'column_invisible':[('parent.evaluation_type', '=', 'quarterly')],'required':[('parent.evaluation_type', '=', 'monthly')]}"/>
             <field name="period_quarter" string='Period' attrs="{'column_invisible':[('parent.evaluation_type', '=', 'monthly')],'required':[('parent.evaluation_type', '=', 'quarterly')]}"/>
             <field name="year" string='Year'/>
             <field name="kpi" string='KPI'/>
             <field name="quartile" string='Quartile' readonly="1"/>
             <field name="note" string='Note'/>
             </tree>
                                          </field>
                        </page>
                  </xpath>
            </field>
    </record>
   
<record model="ir.ui.view" id="kpi_category_tree_view">
     <field name="name">kpi.category.form</field>
     <field name="model">kpi_category</field>
     <field name="arch" type="xml">
         <form string="KPI Category">
           <sheet>
                       
               <group>
               <field name="name" placeholder="Name" required="True"/>
               <field name="quartile_type" required="True"/>
               <label for="kpi_from"/>
               <div class="o_row" name="KPI From">
                                       
                 <field name="kpi_from"  nolabel="1" required="True"/>
                                        <span>%</span>
                                    </div>
                                    <label for="kpi_to"/>
               <div class="o_row" name="KPI To">
                     <field name="kpi_to" nolabel="1" required="True"/> 
                     <span>%</span>
                                    </div>
                     <field name="note"/>
               </group>
           </sheet>
         </form>
     </field>
     </record>
     <record model="ir.ui.view" id="kpi_category_form_view">
     <field name="name">kpi.category.tree</field>
     <field name="model">kpi_category</field>
     <field name="arch" type="xml">
         <tree string="KPI Category">
                  <field name="name" />
                  <field name="quartile_type"/>
                 <field name="kpi_from"/>
                <field name="kpi_to" />
                <field name="note"/>
         </tree>
     </field>
     </record>

     <record model="ir.actions.act_window" id="kpi_category">
      <field name="name">KPI Category</field>
      <field name="res_model">kpi_category</field>
      <field name="view_mode">tree,form</field>
    </record>
   <!-- <menuitem name="Employee KPI" parent="menu_human_resources_configuration" id="menu_view_kpi_category" action="kpi_category" /> -->
   <menuitem name="Employee KPI" id="kpi_category_menu" parent="hr.menu_human_resources_configuration"
              action="kpi_category" groups="kpi_officer"/>
  </data>
</odoo>
