  <data>

    <record id="hr_applicant_form_excel" model="ir.ui.view">
        <field name="name">hr.applicant.form.excel</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_skill_qualification.view_hr_applicant_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
              <page string="Excel Test" name="excel_test" attrs="{'invisible':[('excel_check','=',False)]}">
                <group>
                  <group>
                  <field name="excel_check" invisible='1'/>
                  <field name="skill_id"  force_save="1" readonly='1'/>
                </group>
              </group>
                  <field name="excel_line_ids" nolabel="1" >
                    <tree editable="bottom" create="false"  delete="false">
                      <field name="question" force_save="1" readonly='1'/>
                      <field name="mark" force_save="1" readonly='1' string="Benchmark" sum="mark"/>
                      <field name="new_mark" string="Mark" sum="new_mark"/>
                    </tree>
                  </field>
                  <group>
                    <group>
                      <field name="skill_level_id" force_save="1" readonly='1'/>
                    </group>
                    <group>
                      <!-- <field name="total" class="float-right" readonly="1" force_save="1"/> -->
                      <button name="compute_level" class="float-right btn btn-primary" type="object" string="Result" />
                  </group>
                </group>
              </page>
            </xpath>

        </field>
    </record>


