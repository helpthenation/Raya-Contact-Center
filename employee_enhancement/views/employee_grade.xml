<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="employee_grade_view_list">
      <field name="name">Employee Grade</field>
      <field name="model">employee.grade</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="garde"/>
          <field name="grade_level_exception"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <!-- <record model="ir.actions.act_window" id="employee_grade.action_window">
      <field name="name"></field>
      <field name="res_model"></field>
      <field name="view_mode">tree,form</field>
    </record> -->

    <record model="ir.ui.view" id="employee_grade_view_form">
        <field name="name">Employee Grade</field>
        <field name="model">employee.grade</field>
        <field name="arch" type="xml">
            <form string="Employee Grade">
              <sheet>
                <group>
                  <group>
                    <field name="name"/>
                    <field name="grade_level_exception"/>
                  </group>
                  <group>
                    <field name="garde"/>
                  </group>
                </group>
                <group>
                  <field name="description"/>
                </group>
              </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="employee_grade_action_window_form_action">
        <field name="name">Employee Grade</field>
        <field name="res_model">employee.grade</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Click to start add new Employee Grade.
          </p>
        </field>
    </record>



    <!-- menu categories -->
    <menuitem name="Employee Grade" id="employee_grade_menu" parent="hr.menu_human_resources_configuration"
      action="employee_grade_action_window_form_action"/>

  </data>
</odoo>
