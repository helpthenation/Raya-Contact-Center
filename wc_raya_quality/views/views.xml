<odoo>
  <data>
    <record id="view_job_form2" model="ir.ui.view">
              <field name="name">hr.job.form</field>
              <field name="model">hr.job</field>
              <field name="inherit_id" ref="wc_screening_excel.hr_job_form_excel"/>
              <field name="arch" type="xml">
                <field name="excel_check" position="before">
                  <field name="quality_hold"/>
                </field>

              </field>
      </record>
    <record id="hr_applicant_view_form" model="ir.ui.view">
            <field name="name">hr.applicant.form</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='national_id']" position="after">
            <div>
                  <label for="quality_hold" groups="wc_raya_quality.system_hr_recruitment_quality_team"/>
                  <field name="quality_hold" string="Quality Hold" readonly="1" force_save="1"/>
                  </div>
                  </xpath>
            <xpath expr="//form/header" position="inside">
                  <button name="quality_hold_release" string="Quality Release" type="object" groups="wc_raya_quality.system_hr_recruitment_quality_team" attrs="{'invisible':[('quality_hold', '!=', True)]}"/>
                  </xpath>
            </field>
    </record>
  </data>
</odoo>
