<odoo>
  <data>
    <!-- explicit list view definition -->
      <!-- qualifcation lines wizard Form view -->
        <record id="wc_ta_qualification_hr_resume_line_view_form" model="ir.ui.view">
          <field name="name">Qualification</field>
          <field name="model">wc_ta_qualification.hr.resume.line</field>
          <field name="arch" type="xml">
            <form string="Qualification">
              <div class="oe_title">
                <label for="name" class="oe_edit_only"/>
                  <h1>
                    <field name="name" placeholder="Title" required="True"/>
                  </h1>
              </div>
              <group>
                <group>
                  <field name="line_type_id"/>
                  <field name="display_type" required="1"/>
                </group>
                <group>
                  <field name="date_start" required="True"/>
                  <field name="date_end"/>
                </group>
              </group>
              <field name="description" placeholder="Description"/>
            </form>
          </field>
        </record>

      <!-- Inhirit hr.applicant for Qualification page -->
        <record id="view_hr_applicant_feed_form" model="ir.ui.view">
          <field name="name">view.hr.applicant.form</field>
          <field name="model">hr.applicant</field>
          <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form" />
          <field name="arch" type="xml">
          <xpath expr="//field[@name='gender']" position="after">
        <field name="employee_job_category" invisible="1"/>
      </xpath>
            <xpath expr="//page[@name='hr_qualification']" position="after">
              <page name="ta_qualification" string="Qualifiacations" attrs="{'invisible':['|','|','|','|',('employee_job_category','=','talent'),('job_category','=','operational'),('quality_hold','=',True),('is_initial','=',True),('stage_id','=',False)],'readonly':[('is_final','=',True)],'force_save':[('is_final','=',True)]}">
                <field mode="tree" nolabel="1" name="resume_line_ids"  attrs="{'readonly':[('is_final','=',True)]}">
                  <tree>
                    <field name="line_type_id"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="display_type" invisible="1"/>
                  </tree>
                </field>
              </page>
            </xpath>
          </field>
        </record>
        <!-- Job position override -->
        
        <record id="view_hr_job_qualification_form" model="ir.ui.view">
            <field name="name">hr.job.form</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
              <xpath expr="//page[@name='hr_qualification']" position="attributes">
                <attribute name="attrs">{'invisible':[('job_category', '=', 'talent')]}</attribute>
              </xpath>
               <xpath expr="//page[@name='hr_qualification']" position="after">
              <page name="ta_qualification" string="Qualifiacations" attrs="{'invisible':[('job_category','=','operational')]}">
                <field mode="tree" name="resume_line_ids" >
                  <tree>
                    <field name="line_type_id"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="display_type" invisible="1"/>
                  </tree>
                </field>
              </page>
            </xpath>
            </field>
          </record>

          <!-- Hiring Request override -->
          
          <record id="view_hiring_request_qualification_form" model="ir.ui.view">
            <field name="name">raya.skill.hire.form.hiring.request.talent</field>
            <field name="model">hiring.request</field>
            <field name="inherit_id" ref="raya_skill_hiring.raya_skill_hire_form_hiring_request_talent"/>
            <field name="arch" type="xml">
              <xpath expr="//page[@name='hr_qualification']" position="attributes">
                <attribute name="attrs">{'invisible':[('category', '=', 'Talent Acq')]}</attribute>
              </xpath>
               <xpath expr="//page[@name='hr_qualification']" position="after">
              <page name="ta_qualification" string="Qualifiacations" attrs="{'invisible':[('category','=','operational')]}">
                <field mode="tree" name="resume_line_ids" >
                  <tree>
                    <field name="line_type_id"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="display_type" invisible="1"/>
                  </tree>
                </field>
              </page>
            </xpath>
            </field>
          </record>

  </data>
</odoo>
