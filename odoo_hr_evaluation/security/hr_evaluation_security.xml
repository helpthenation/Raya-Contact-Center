<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="grp_evalution_user" model="res.groups">
            <field name="name">Evaluation User</field>
            <field name="implied_ids" eval="[(4, ref('survey.group_survey_user'))]"/>
        </record>
        
        <record id="grp_evalution_manager" model="res.groups">
            <field name="name">Evaluation Manager</field>
            <field name="implied_ids" eval="[(4, ref('odoo_hr_evaluation.grp_evalution_user'))]"/>
        </record>
    
        <record id="hr_evaluation_plan_comp_rule" model="ir.rule">
            <field name="name">Evaluation Plan multi company rule</field>
            <field name="model_id" ref="model_hr_evaluation_plan"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="hr_evaluation_plan_phase_comp_rule" model="ir.rule">
            <field name="name">Evaluation Plan Phase multi company rule</field>
            <field name="model_id" ref="model_hr_evaluation_plan_phase"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="hr_employee_interview" model="ir.rule">
            <field name="name">Employee Interview</field>
            <field ref="model_hr_evaluation_interview" name="model_id"/>
            <field name="domain_force">['|', ('user_id','=',user.id), ('user_id','=',False)]</field>
            <field eval="False" name="global"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="hr_employee_interview_hr" model="ir.rule">
            <field name="name">Employee Interview - HR</field>
            <field ref="model_hr_evaluation_interview" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>

        <record id="hr_evaluation_interview_comp_rule" model="ir.rule">
            <field name="name">Evaluation Interview multi company rule</field>
            <field name="model_id" ref="model_hr_evaluation_interview"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="hr_evaluation_cmp_rule" model="ir.rule">
            <field name="name">Evaluation multi company rule</field>
            <field name="model_id" ref="model_hr_evaluation_evaluation"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="evaluation_user_rule" model="ir.rule">
            <field name="name">Evaluation User Rule</field>
            <field name="model_id" ref="model_hr_evaluation_evaluation"/>
            <field name="groups" eval="[(4, ref('odoo_hr_evaluation.grp_evalution_user'))]"/>
            <field name="domain_force">['|',('evaluation_officer_id','=',False),('evaluation_officer_id','=',[user.id])]</field>
        </record>

        <record id="evaluation_manager_rule" model="ir.rule">
            <field name="name">Evaluation Manager Rule</field>
            <field name="model_id" ref="model_hr_evaluation_evaluation"/>
            <field name="groups" eval="[(4, ref('odoo_hr_evaluation.grp_evalution_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

    </data>
</odoo>
